# vim: set filetype=fish:
# ANSIBLE-MANAGED CONFIGURATION FILE

function fish_prompt
  # display colorized pwd on first line
  printf "\n"
  set_color --background blue
  set_color yellow
  printf "$PWD"
  set_color normal

  # display colorized caret and symbol on second line
  set_color white
  printf "\n--> "
  set_color normal
end

